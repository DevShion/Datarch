{
    "name": "@devshion/npm-dual-package-template",
    "version": "1.0.0",
    "type": "module",
    "main": "./main/index.js",
    "types": "./index.ts",
    "module": "./module/index.js",
    "scripts": {
        "build": "tsc -p ./tsconfig.json && tsc -p ./tsconfig.cjs.json && tsconfig-to-dual-package"
    },
    "exports": {
        ".": {
            "import": {
                "types": "./index.ts",
                "default": "./module/index.js"
            },
            "require": {
                "types": "./index.ts",
                "default": "./cjs/index.js"
            },
            "default": {
                "types": "./index.ts",
                "default": "./cjs/index.js"
            }
        }
    },
    "devDependencies": {
        "tsconfig-to-dual-package": "^1.2.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/DevShion/npm-dual-package-template"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    }
}
